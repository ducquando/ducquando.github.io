          p.button-text Linkedin
        //- Github
        a(href="https://github.com/ducquando").button.large.width-25
          svg(xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 172.36 167.82")
            path(d=icons["GitHub"])
          p.button-text GitHub
        //- Behance
        a(href="https://www.behance.net/quannz").button.large.width-25
          svg(xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 210.4 132.42")
            path(d=icons["Behance"])
            rect(x="136.56" y="6.72" width="53.53" height="14.84")
          p.button-text Behance

    //- Sitemap
    #footer-sitemap-section.width-90 
      p.caption Copyright 2023 @Do Duc Quan 
      #footer-nav-links
        a(href="/" data-link).button.mid-2
          h2 Home
        a(href="/about" data-link).button.mid-2
          h2 About
