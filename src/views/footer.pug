      rect.divider

    //- Connect
    p.large Stay connected 
    #footer-link-section.width-90 
      //- Mail
      a(href="mailto:dodquan@gmail.com").button.large.width-70 
        svg(xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 20 20" fill="none")
